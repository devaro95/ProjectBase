<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_splash"
    app:startDestination="@id/splashViewFragment">
    <fragment
        android:id="@+id/splashViewFragment"
        android:name="com.projectBase.ui.splash.SplashViewFragment"
        android:label="Splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashViewFragment_to_mainToolbarsViewActivity"
            app:destination="@id/mainViewActivity" />
    </fragment>
    <activity
        android:id="@+id/mainViewActivity"
        android:name="com.projectBase.ui.main.MainActivity"
        android:label="MainViewActivity"
        tools:layout="@layout/fragment_home" />
</navigation>